# ============================================
# Database (SENSITIVE - NEVER COMMIT)
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/tactika_prod?schema=public"

# ============================================
# JWT (SENSITIVE - NEVER COMMIT)
# ============================================
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-change-in-prod"
JWT_EXPIRES_IN="24h"

# ============================================
# Payment Processors (SENSITIVE - NEVER COMMIT)
# ============================================
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-secret"
PAYPAL_MODE="live"

MERCADOPAGO_ACCESS_TOKEN="your-mercadopago-token"

# ============================================
# Meta Conversions API (SENSITIVE - PER TENANT)
# ============================================
# Per-tenant config stored encrypted in database
META_BUSINESS_ACCOUNT_ID="your-business-id"
META_API_VERSION="v19.0"

# ============================================
# Email Service (SENSITIVE - NEVER COMMIT)
# ============================================
SENDGRID_API_KEY="SG.your-sendgrid-key"
SENDGRID_FROM_EMAIL="noreply@barmentech.com"
RESEND_API_KEY="re_your-resend-key"

# ============================================
# DO Spaces / Object Storage (SENSITIVE - NEVER COMMIT)
# ============================================
DO_SPACES_ENDPOINT="nyc3.digitaloceanspaces.com"
DO_SPACES_BUCKET="your-bucket-name"
DO_SPACES_REGION="nyc3"
DO_SPACES_ACCESS_KEY="your-do-access-key"
DO_SPACES_SECRET_KEY="your-do-secret-key"
DO_SPACES_URL="https://your-bucket-name.nyc3.digitaloceanspaces.com"

# ============================================
# Application Configuration
# ============================================
NODE_ENV="production"
PORT=3000

# ============================================
# URLs
# ============================================
API_URL="https://api.barmentech.com"
FRONTEND_URL="https://app.barmentech.com"
WEBHOOK_URL="https://api.barmentech.com/webhooks"

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL="info"

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# ============================================
# CORS
# ============================================
CORS_ORIGIN="https://app.barmentech.com,https://barmentech.com"
